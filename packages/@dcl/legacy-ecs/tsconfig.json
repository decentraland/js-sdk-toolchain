{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "inlineSourceMap": true,
    "outDir": "dist/",
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "keyofStringsOnly": true,
    "stripInternal": true,
    "strict": true,
    "strictNullChecks": true,
    "noLib": true,
    "alwaysStrict": true,
    "types": [
      "@dcl/posix",
      "env"
    ],
    "typeRoots": [
      "./node_modules",
      "../../decentraland-ecs/types"
    ]
  },
  "include": ["src/"]
}
