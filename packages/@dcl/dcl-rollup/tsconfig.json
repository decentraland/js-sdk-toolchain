{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "outDir": "dist"
  },
  "include": ["*.ts"],
  "exclude": ["dist"]
}
