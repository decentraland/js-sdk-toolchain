{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "declaration": true
  },
  "include": ["src/**.ts"]
}
