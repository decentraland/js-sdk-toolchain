{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "types": [
      "node",
    ],
    "lib": [
      "es2020"
    ],
    "outDir": "./dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}