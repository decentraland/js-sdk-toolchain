{
  "compilerOptions": {
    "target": "es2020",
    "diagnostics": false,
    // only emit inline source maps
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceMap": false,
    "moduleResolution": "classic",
    "stripInternal": true,
    "pretty": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "lib": ["es2020"],
    "outFile": "dist/amd.js",
    "baseUrl": ".",
    "typeRoots": ["./node_modules"],
    "types": ["@dcl/posix"]
  },
  "exclude": ["node_modules", "dist"]
}
