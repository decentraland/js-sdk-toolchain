{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "runtimeArgs": ["--async-stack-traces"],
      "args": ["${file}", "--verbose", "--no-cache", "-i"],
      "skipFiles": ["<node_internals>/**/*.js", "node_modules/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug sdk-commands start test-scene",
      "program": "${workspaceFolder}/packages/@dcl/sdk-commands/dist/index.js",
      "runtimeArgs": ["--async-stack-traces"],
      "args": ["start", "--data-layer", "--no-browser"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/test-scene"
    }
  ],
  "compounds": [
    {
      "name": "Debug sdk-commands start test-scene",
      "configurations": ["Debug sdk-commands start test-scene"],
      "stopAll": true
    }
  ]
}
