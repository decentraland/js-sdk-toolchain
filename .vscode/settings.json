{
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "test/snapshots/*.js.map": true,
    "test/snapshots/node_modules": true,
    "test/snapshots/package-lock.json": true,
    "packages/@dcl/*/*.tgz": true,
    "packages/@dcl/*/*.js": true,
    "packages/@dcl/sdk/**/*.d.ts": true,
    "**/*.js": { "when": "$(basename).ts" },
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}